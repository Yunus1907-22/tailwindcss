<!-- Navbar -->
<nav class="bg-white shadow-md py-4 px-6 fixed top-0 left-0 w-full z-10">
  <div class="flex items-center justify-between">
    <!-- Logo -->
    <div class="flex items-center space-x-3">
      <%= link_to root_path, class: "flex items-center" do %>
        <img src="/path/to/logo.png" alt="Exproware Logo" class="h-8">
        <span class="text-xl font-bold text-gray-800 ml-2">Exproware</span>
      <% end %>
    </div>

    <!-- Navigation Links -->
    <div class="hidden md:flex space-x-6">
      <%= link_to "Projekte finden", projects_path, class: "text-gray-600 hover:text-gray-800 font-medium" %>
      <%= link_to "Experten finden", experts_path, class: "text-gray-600 hover:text-gray-800 font-medium" %>
    </div>

    <!-- Mobile Menu Button -->
    <div class="md:hidden flex items-center">
      <button id="menu-toggle" class="text-gray-600 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu (hidden by default) -->
  <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md mt-2 p-4 space-y-2">
    <%= link_to "Projekte finden", projects_path, class: "block text-gray-600 hover:text-gray-800 font-medium" %>
    <%= link_to "Experten finden", experts_path, class: "block text-gray-600 hover:text-gray-800 font-medium" %>
  </div>
</nav>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Projects" %>
  <div class="flex justify-between items-center mb-6">
  <div class="flex flew-row items-center justify-end">
    <%= link_to "New project", new_project_path, class: "px-4 py-2 bg-white text-red-600 border border-red-600 rounded-full flex items-center shadow-md mb-10" %>
    <%= link_to "Back", root_path, class: "px-4 py-2 bg-white text-red-600 border border-red-600 rounded-full flex items-center shadow-md mb-10" %> 
    </div>
  </div>

  <!-- Filter Button und Kategoriefenster -->
  <div class="bg-gray-50 p-4 rounded-lg shadow-md mb-10">
    <div class="flex items-center space-x-4 mb-4">
      <button id="filter-button" class="px-4 py-2 bg-white text-red-600 border border-red-600 rounded-full flex items-center shadow-md mb-10"">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4h16M4 8h16M4 12h8m-8 4h8" />
        </svg>
        Filtern
      </button>
      <input type="text" placeholder="Search projects" class="p-2 border border-gray-300 rounded-lg w-full">
    </div>
    <!-- Kategoriefenster (Filteroptionen) -->
  <div id="filter-options" class="flex space-x-2 hidden">
    <button class="px-4 py-2 bg-red-100 text-gray-600 rounded-md">Delegationsbesuch</button>
    <button class="px-4 py-2 bg-red-100 text-gray-600 rounded-md">Dozentenfortbildung</button>
    <button class="px-4 py-2 bg-gray-100 text-gray-600 rounded-md">Summer School</button>
    <button class="px-4 py-2 bg-gray-100 text-gray-600 rounded-md">fachliche Weiterbildung</button>
  </div>
</div>

<!-- JavaScript für das Ein-/Ausblenden des Kategoriefensters -->
<script>
  document.getElementById("filter-button").addEventListener("click", function() {
    var filterOptions = document.getElementById("filter-options");
    filterOptions.classList.toggle("hidden"); // Toggle zwischen sichtbar und unsichtbar
  });
</script>

<!-- Projects Section -->
<div>
  <div class="bg-gray-50 p-4 rounded-lg shadow-md mb-10">
    <div id="projects" class="min-w-full">
      <% @projects.each do |project| %>
        <div class="bg-white p-4 rounded-lg shadow-md mb-10 flex flex-col h-full">
          <%= render partial: "previewproject", locals: { project: project } %>
          <div class="mt-auto flex justify-end"> <!-- Flexbox für die Positionierung des Buttons -->
            <%= link_to "Details", project, class: "rounded-full py-3 px-5 bg-white border border-red-600 text-red-600 shadow-md inline-block font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


