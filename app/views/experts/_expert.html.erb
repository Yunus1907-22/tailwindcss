<div class="bg-white">
  <div class="bg-white p-4 rounded-lg shadow-md flex justify-between items-center mb-4">
    
   
    <div class="flex flex-col justify-start h-48">
      
      <div class="text-3xl font-bold text-gray-800 mb-2">
        <%= expert.academic_title %> <%= expert.first_name %> <%= expert.last_name %>
      </div>

      
      <div class="flex items-center text-gray-600 text-sm mt-1 mb-2">
       
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 2a6 6 0 00-6 6c0 4.28 5.04 9.14 5.29 9.39a.75.75 0 001.06 0C10.96 17.14 16 12.28 16 8a6 6 0 00-6-6zm0 8a2 2 0 110-4 2 2 0 010 4z" clip-rule="evenodd" />
        </svg>
        <%= expert.location || "Standort nicht angegeben" %>
      </div>

    
      <div class="flex items-center text-gray-600 text-sm mt-1 mb-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M6.293 2.293a1 1 0 011.414 0L12 6.586l4.293-4.293a1 1 0 111.414 1.414l-4.293 4.293 4.293 4.293a1 1 0 11-1.414 1.414L12 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l4.293-4.293L6.293 3.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        <%= expert.telefon_number || "Phone number not available" %>
      </div>

    
      <div class="flex gap-2 mt-2 mb-2">
        <button class="px-3 py-1 text-sm border border-red-500 text-red-500 rounded-md">
          Dozentenfortbildung
        </button>
        <button class="px-3 py-1 text-sm border border-gray-300 text-gray-500 rounded-md bg-gray-300">
          fachliche Weiterbildung
        </button>
      </div>
    </div>

   
    <div class="flex flex-col items-center gap-4">
      <% if expert.image.attached? %>
        <%= image_tag url_for(expert.image), style: "width: 200px; height: 200px; object-fit: cover;", class: "rounded-full border shadow-lg" %>
        <%= link_to "Details", expert, class: "px-4 py-2 text-sm border border-red-500 text-red-500 rounded-md" %>
      <% else %>
       <%= image_tag asset_path('user-profile-4255.png'), style: "width: 200px; height: 200px; object-fit: cover;", class: "rounded-full border shadow-lg" %>
      <%= link_to "Details", expert, class: "px-4 py-2 text-sm border border-red-500 text-red-500 rounded-md" %>
      <% end %>
    </div>
  </div>
</div>
